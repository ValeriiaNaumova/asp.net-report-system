@page
@model NaumovaValeriiaDU2.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Request</h4>
    <hr />
    <table class="table">
        <tr>
            <td>
                <h5> @Model.Request.Id</h5>
            </td>
            <td>
                <h5> @Model.Request.Category</h5>
            </td>
            <td>
                <h5> @Model.Request.Product</h5>
            </td>
            <td>
                <h5> @Model.Request.Email</h5>
            </td>
            <td>
                <h5> @Model.Request.Date</h5>
            </td>
            <td>
                <h5> @Model.Request.Text</h5>
            </td>
            <td>
                <button type="submit" asp-page-handler="OnPostDownloadFilefromEdit" style="width:75px" class="cancel">
                    Download
                </button>
            </td>
        </tr>
    </table>
        

        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-page="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Request.Id" name="id" />
                    <div class="form-group">
                        <input type="text" id="name" name="Text" required maxlength="500">
                    </div>
                    <div class="form-group">
                        <input type="file" name="Upload" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Upload" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="./MainPage">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
</html>
